{
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "semi": ["error", "never"],
    "quotes": ["error", "single"],
    "no-var": "error",
    "indent": ["error", 2],
    "no-multi-spaces": "error",
    "no-console": "error"
  },
  "ignorePatterns": ["dist/**/*.*", "plop-templates/**/*.*", "types/**/*.*"]
}
